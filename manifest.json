{
  "manifest_version": 2,
  "name": "Politics & War Player Ad Block",
  "version": "1.1",
  "description": "A Chrome extension to remove player ads from PnW",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
